{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.d.ts"],
  "exclude": ["./src/__tests__/*", "./esm/*", "./lib/*"],
}